# Cyphera Monorepo Environment Configuration
# Copy this file to .env and update with your values

# ===== Core Configuration =====
STAGE=local
NODE_ENV=development
LOG_LEVEL=debug

# ===== Database =====
DATABASE_URL=postgres://apiuser:apipassword@localhost:5432/cyphera?sslmode=disable
DATABASE_URL_ARN=  # For AWS deployment

# ===== API Server =====
API_PORT=8000
API_HOST=localhost
GIN_MODE=debug

# ===== Delegation Server =====
DELEGATION_SERVER_ADDRESS=localhost:50051
DELEGATION_LOCAL_MODE=true
GRPC_PORT=50051

# ===== Web3 Authentication =====
WEB3AUTH_CLIENT_ID=your_client_id_here
WEB3AUTH_JWKS_ENDPOINT=https://api-auth.web3auth.io/jwks
WEB3AUTH_ISSUER=https://api-auth.web3auth.io
WEB3AUTH_AUDIENCE=your_audience_here

# ===== Circle API =====
CIRCLE_API_KEY=your_circle_api_key_here
CIRCLE_ENVIRONMENT=sandbox

# ===== AWS Configuration =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=  # For local development only
AWS_SECRET_ACCESS_KEY=  # For local development only

# ===== API Keys =====
CYPHERA_API_KEY=admin_valid_key
COIN_MARKET_CAP_API_KEY=your_cmc_key_here

# ===== Encryption =====
PAYMENT_SYNC_ENCRYPTION_KEY=your_32_char_encryption_key_here

# ===== Webhook Configuration =====
WEBHOOK_QUEUE_URL=http://localhost:4566/000000000000/webhook-queue
WEBHOOK_DLQ_URL=http://localhost:4566/000000000000/webhook-dlq

# ===== Stripe Configuration =====
STRIPE_API_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# ===== Subscription Processor =====
SUBSCRIPTION_INTERVAL=10s
SUBSCRIPTION_BATCH_SIZE=100

# ===== Development Tools =====
LOCALSTACK_ENDPOINT=http://localhost:4566
REDIS_URL=redis://localhost:6379

# ===== Feature Flags =====
ENABLE_DELEGATION=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_WEBHOOKS=true