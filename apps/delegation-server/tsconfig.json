{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@cyphera/delegation": ["../../libs/ts/delegation/src"],
      "@cyphera/delegation/*": ["../../libs/ts/delegation/src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
} 