{
  "name": "webhook-processor",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/webhook-processor",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "apps/webhook-processor"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/webhook-processor"],
      "options": {
        "command": "go build -o ../../dist/apps/webhook-processor/webhook-processor ./cmd/main.go",
        "cwd": "apps/webhook-processor"
      }
    },
    "build-lambda": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/apps/webhook-processor/bootstrap"],
      "options": {
        "command": "GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build -ldflags='-s -w' -tags lambda.norpc -o bootstrap ./cmd/main.go",
        "cwd": "apps/webhook-processor"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test -v ./...",
        "cwd": "apps/webhook-processor"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./... && golangci-lint run ./...",
        "cwd": "apps/webhook-processor"
      }
    }
  },
  "implicitDependencies": ["go-shared"]
}