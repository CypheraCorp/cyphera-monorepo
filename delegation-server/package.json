{
  "name": "delegation-server",
  "version": "1.0.0",
  "description": "gRPC server for delegation redemption",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/proto dist/",
    "start": "node dist/index.js",
    "dev": "./scripts/run.sh",
    "start:mock": "MOCK_MODE=true ts-node src/index.ts",
    "clean": "rm -rf dist node_modules",
    "lint": "tsc --noEmit",
    "setup": "bash ./scripts/setup.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "chmod +x ./scripts/run-integration-test.sh && ./scripts/run-integration-test.sh",
    "proto:build": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./src/proto --grpc_out=grpc_js:./src/proto --ts_out=grpc_js:./src/proto -I ./src/proto src/proto/delegation.proto"
  },
  "dependencies": {
    "@metamask/delegation-toolkit": "^0.10.0",
    "dotenv": "16.4.7",
    "grpc-health-check": "^2.0.2",
    "permissionless": "0.2.36",
    "viem": "2.23.9",
    "@grpc/grpc-js": "1.13.0",
    "@grpc/proto-loader": "0.7.13",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.12",
    "grpc_tools_node_protoc_ts": "5.3.3",
    "grpc-tools": "1.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "ox": "0.6.9"
  }
}
