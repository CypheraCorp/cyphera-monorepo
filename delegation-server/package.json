{
  "name": "delegation-server",
  "version": "1.0.0",
  "description": "gRPC server for delegation redemption",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "start:mock": "MOCK_MODE=true ts-node src/index.ts",
    "clean": "rm -rf dist node_modules",
    "lint": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "chmod +x ./scripts/run-integration-test.sh && ./scripts/run-integration-test.sh"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.3",
    "@grpc/proto-loader": "^0.7.10",
    "@metamask-private/delegator-core-viem": "0.6.1",
    "dotenv": "16.4.7",
    "permissionless": "0.2.36",
    "viem": "2.23.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "ox": "0.6.9"
  }
} 