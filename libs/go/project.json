{
  "name": "go-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/go",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "libs/go"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test -v ./...",
        "cwd": "libs/go"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go vet ./... && golangci-lint run ./...",
        "cwd": "libs/go"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/db/*.sql.go"],
      "options": {
        "command": "sqlc generate",
        "cwd": "libs/go/db"
      }
    }
  }
}